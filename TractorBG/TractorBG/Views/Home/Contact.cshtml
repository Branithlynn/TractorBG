@{
    ViewBag.Title = "Contact";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Get 24/7 Support</p>
						<h1>Contact us</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- contact form -->
	<div class="contact-from-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 mb-5 mb-lg-0">
					<div class="form-title">
						<h2>Have you got any question?</h2>
						</div>
				 	<div id="form_status"></div>
					<div class="contact-form">
						<form action="/Home/SendEmail" >
							<p>
								<input type="text" placeholder="Name" name="model.name" id="model.name">
								<input type="email" placeholder="Email" name="model.email" id="model.email">
							</p>
							<p>
								<input type="tel" placeholder="Phone" name="model.phone" id="model.phone">
								<input type="text" placeholder="Subject" name="model.subject" id="model.subject">
							</p>
							<p><textarea name="model.message" id="model.message" cols="30" rows="10" placeholder="Message"></textarea></p>
							<p><input type="submit" value="Send"></p>
						</form>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="contact-form-wrap">
						<div class="contact-form-box">
							<h4><i class="fas fa-map"></i> Shop Address</h4>
							<p>bul. Peshtersko shose 26<br> Plovdiv <br> Bulgaria</p>
						</div>
						<div class="contact-form-box">
							<h4><i class="far fa-clock"></i> Shop Hours</h4>
							<p>MON - FRIDAY: 8 to 9 PM <br> SAT - SUN: 10 to 8 PM </p>
						</div>
						<div class="contact-form-box">
							<h4><i class="fas fa-address-book"></i> Contact</h4>
							<p>Phone: +359 886 886 886 <br> Email: tractorbg123@abv.bg</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end contact form -->