@{
    ViewBag.Title = "Shop";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@model TractorBG.Model.shopModel

<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>New Production</p>
						<h1>Shop</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- products -->
	<div class="product-section mt-150 mb-150">
		<div class="container">

			<div class="row product-lists">
				@foreach(var item in Model.tractors)
				{
					<div class="col-lg-4 col-md-6 text-center strawberry">
						<div class="single-product-item">
							<div class="product-image">
								<a href="/Home/Details?id=@item.id"><img src = "@Url.Action("GetImage", "Home",new { id =  item.id})" alt=""></a>
							</div>
							<h3>@item.brand</h3>
							<p class="product-price"><span>@item.model</span></p>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
	<!-- end products -->