@{
    ViewBag.Title = "Login";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@model TractorBG.Model.loginRegisterModel

<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Log to your account</p>
					<h1>Login</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->

<div class="contact-form mt-150 mb-150">
	<center>
		<form action="/Home/Login" method="post">
			<p>
				<input type="text"  placeholder="Username" name="model.username" id="model.username">
				@Html.ValidationMessageFor(model => model.username)
			</p>
			<p>
				<input type="password" placeholder="Password" name="model.password" id="model.password">
				@Html.ValidationMessageFor(model => model.password)
			</p>
			<p><input type="submit" value="Login"></p>
		</form>
	</center>
</div>